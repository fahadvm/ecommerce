                    <div class="single_sedebar">
                        <div class="select_option">
                            <div class="select_option_list">Flavor Type <i class="right fas fa-caret-down"></i></div>
                            <div class="select_option_dropdown">
                                <p><a href="">Sweet</a></p>
                                <p><a href="">Spicy</a></p>
                                <p><a href="">Salty</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="col-md-8">
                <div class="product_list">
                    <div class="row">
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_item">
                                <img src="pic/p1.jpg" alt="Snack Pack" class="img-fluid">
                                <h3><a href="">Travel Snack Pack – Perfect for Flights, Road Trips & Office</a></h3>
                                <p>From ₹1</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_item">
                                <img src="pic/p2.jpg" alt="Gourmet Chips" class="img-fluid">
                                <h3><a href="">Gourmet Chips – Bold Flavors, Crunchy Bites</a></h3>
                                <p>From ₹1</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_item">
                                <img src="pic/p3.jpg" alt="Sweet Snack Mix" class="img-fluid">
                                <h3><a href="">Sweet Snack Mix – A Perfect Treat for Anytime</a></h3>
                                <p>From ₹1</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_item">
                                <img src="pic/p4.jpg" alt="Spicy Crunch Pack" class="img-fluid">
                                <h3><a href="">Spicy Crunch Pack – For the Bold Snack Lover</a></h3>
                                <p>From ₹1</p>
                            </div>
                        </div>
                    </div>

                    <div class="load_more_btn text-center">
                        <a href="#" class="btn_3">Load More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
